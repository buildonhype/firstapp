<div class="page-header">
  <h2>All of the Statuses</h2>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %> |
    <span class="admin">
      <%= link_to "Modifier", edit_status_path(status) %> |
      <%= link_to "Supprimer", status, method: :delete, data: {confirm: "Voulez-vous supprimer ce statut?"} %>
      </span>
  </div>
</div>
<% end %>