<div class="page-header">
  <h2>All of the Statuses <%= link_to "Post a New Status", new_status_path, class: "btn btn-success pull-right" %></h2>
</div>

<% @statuses.each do |status| %>
<div class="status row">
  <div class="span1">
   <%= image_tag (status.user.gravatar_url )%>
  </div>

  <div class="span7">
    <strong><%= status.user.full_name %></strong>
    <p><%= status.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
       | <%= link_to "Modifier", edit_status_path(status) %> |
        <%= link_to "Supprimer", status, method: :delete, data: {confirm: "Voulez-vous supprimer ce statut?"} %>
        </span>
    </div>
  </div>
</div>
<% end %>